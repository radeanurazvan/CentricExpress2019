@model CentricExpress.Presentation.Models.Superhero

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
</head>
<body>

<h4>Superhero</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Superpower" class="control-label"></label>
                <input asp-for="Superpower" class="form-control" />
                <span asp-validation-for="Superpower" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CombatPower" class="control-label"></label>
                <input asp-for="CombatPower" class="form-control" />
                <span asp-validation-for="CombatPower" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
</body>
</html>
